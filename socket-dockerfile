# Socket Server Dockerfile for Fly.io
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install --production

# Copy socket server and prisma files
COPY socket-server.mjs ./
COPY prisma/ ./prisma/

# Generate Prisma client
RUN npx prisma generate

# Expose socket port
EXPOSE 3001

# Start socket server
CMD ["npm", "run", "socket"]