generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  bio       String?
  name           String?
  profilePicture String?  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clothes   Clothing[]
  matches   Match[]    @relation("UserMatches")
}


model Clothing {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  category    String
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     Int
  createdAt   DateTime @default(now())

  // Multiple images instead of single imageUrl
  images      ClothingImage[]

  // Back-relations to Match model
  matchesA Match[] @relation("ClothingA")
  matchesB Match[] @relation("ClothingB")
}

model ClothingImage {
  id        Int      @id @default(autoincrement())
  url       String
  clothing  Clothing @relation(fields: [clothingId], references: [id], onDelete: Cascade)
  clothingId Int
  createdAt DateTime @default(now())

  @@index([clothingId])
}

model Match {
  id          Int       @id @default(autoincrement())
  userA       User      @relation("UserMatches", fields: [userAId], references: [id])
  userAId     Int
  userBId     Int
  clothingA   Clothing? @relation("ClothingA", fields: [clothingAId], references: [id])
  clothingAId Int?
  clothingB   Clothing? @relation("ClothingB", fields: [clothingBId], references: [id])
  clothingBId Int?
  createdAt   DateTime  @default(now())
}