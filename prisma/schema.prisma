generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  bio       String?
  name           String?
  profilePicture String?  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clothes   Clothing[]
  matches   Match[]    @relation("UserMatches")
}

model Follow {
  id          Int      @id @default(autoincrement())
  followerId  Int
  followingId Int
  createdAt   DateTime @default(now())

  // Relationships
  follower  User @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
}


model Clothing {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String
  category    String
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     Int
  createdAt   DateTime @default(now())

  // Back-relations to Match model
  matchesA Match[] @relation("ClothingA")
  matchesB Match[] @relation("ClothingB")
}

model Match {
  id          Int       @id @default(autoincrement())
  userA       User      @relation("UserMatches", fields: [userAId], references: [id])
  userAId     Int
  userBId     Int
  clothingA   Clothing? @relation("ClothingA", fields: [clothingAId], references: [id])
  clothingAId Int?
  clothingB   Clothing? @relation("ClothingB", fields: [clothingBId], references: [id])
  clothingBId Int?
  createdAt   DateTime  @default(now())
}
